{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "types": ["cypress", "node"]
  },
  "include": [
    "src",
    "cypress",
    "src/**/*.ts",
    "src/**/*.tsx",
    "cypress/**/*.ts",
    "cypress/**/*.tsx",
    "cypress.config.ts",
    "**/*.cy.ts",
    "**/*.cy.tsx"
  ]
}
